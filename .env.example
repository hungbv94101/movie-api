APP_NAME="Movie API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=movie_app
DB_USERNAME=laravel
DB_PASSWORD=password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email Configuration (Ethereal Email for testing)
MAIL_MAILER=smtp
MAIL_HOST=smtp.ethereal.email
MAIL_PORT=587
MAIL_USERNAME=your-ethereal-username
MAIL_PASSWORD=your-ethereal-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@movieapi.local"
MAIL_FROM_NAME="${APP_NAME}"

# GraphQL Configuration
# Default settings work for most applications

# OMDb API Configuration (for seeding/development only)
# Get your free API key from: https://www.omdbapi.com/
# This is only used for populating the database, not for production search
OMDB_API_KEY=your-omdb-api-key
OMDB_API_URL=http://www.omdbapi.com/

VITE_APP_NAME="${APP_NAME}"
